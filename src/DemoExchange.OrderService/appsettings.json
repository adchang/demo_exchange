{
  "ConnectionStrings": {
    "DemoExchangeDb": "Server=loki,1433;Database=demo_exchange;User Id=demo_exchange_user;Password=PASSWORD;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/log/orderService.log",
          "RollingInterval": "Infinite"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessName",
      "WithThreadName",
      "WithExceptionDetails"
    ],
    "Properties": {
      "Application": "DemoExchange Simulator"
    }
  },
  "AllowedHosts": "*"
}