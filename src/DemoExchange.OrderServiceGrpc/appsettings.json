{
  "ConnectionStrings": {
    "DemoExchangeDb": "Server=tcp:172.17.0.1,1433;Database=demo_exchange;User Id=demo_exchange_user;Password=PASSWORD;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/log/orderServiceGrpc.log",
          "RollingInterval": "Infinite"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessName",
      "WithThreadName",
      "WithExceptionDetails"
    ],
    "Properties": {
      "Application": "DemoExchange.OrderService"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  }
}